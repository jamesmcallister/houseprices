{
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "presets": [
    "es2015"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "curly": "error",
    "no-inner-declarations": "off",
    "no-var": "error",
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "strict": "error",
    "no-console": [
      "error"
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false
      }
    ]
  }
}