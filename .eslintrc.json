{
  "parser": "babel-eslint",
  "plugins": [
    "promise",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    }
  },
  "extends": "plugin:promise/recommended",
  "rules": {
    "promise/avoid-new": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false
      }
    ]
  }
}